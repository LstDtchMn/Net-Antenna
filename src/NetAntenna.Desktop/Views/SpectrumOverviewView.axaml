<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:NetAntenna.Desktop.ViewModels"
             xmlns:local="using:NetAntenna.Desktop"
             x:Class="NetAntenna.Desktop.Views.SpectrumOverviewView"
             x:DataType="vm:SpectrumOverviewViewModel">

    <Grid RowDefinitions="Auto,Auto,*">
        
        <Border Grid.Row="0" Background="#1E1E2E" CornerRadius="8" Padding="16" Margin="0,0,0,4">
            <Grid ColumnDefinitions="*,Auto,Auto">
                <StackPanel Grid.Column="0" Spacing="4">
                    <TextBlock Text="UHF Spectrum Analyzer" FontSize="20" FontWeight="SemiBold" Foreground="White" />
                    <TextBlock Text="Reads real-time signal data for all known channels from the device lineup." Foreground="#B0B0B0" TextWrapping="Wrap"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="ðŸ”„ Rescan Device"
                        Command="{Binding RescanDeviceCommand}"
                        IsEnabled="{Binding !IsRescanning}"
                        Padding="12,8" Margin="0,0,8,0"
                        Background="#313244" Foreground="White" FontWeight="Bold"
                        ToolTip.Tip="Trigger a full RF channel scan on the HDHomeRun device (~1-2 min)">
                    <Button.Styles>
                        <Style Selector="Button:disabled">
                            <Setter Property="Background" Value="#1E1E2E"/>
                            <Setter Property="Foreground" Value="#6C7086"/>
                        </Style>
                    </Button.Styles>
                </Button>

                <Button Grid.Column="2" 
                        Content="ðŸ“¡ Start Sweep" 
                        Command="{Binding StartSweepCommand}" 
                        IsEnabled="{Binding !IsSweeping}"
                        Padding="16,8"
                        Background="#89B4FA" Foreground="Black" FontWeight="Bold">
                    <Button.Styles>
                        <Style Selector="Button:disabled">
                            <Setter Property="Background" Value="#313244"/>
                            <Setter Property="Foreground" Value="#A6ADC8"/>
                            <Setter Property="Content" Value="â³ Sweeping..." />
                        </Style>
                    </Button.Styles>
                </Button>
            </Grid>
        </Border>
        
        <!-- Rescan status + sweep progress -->
        <StackPanel Grid.Row="1" Spacing="4" Margin="0,4,0,12">
            <Border Background="#313244" CornerRadius="4" Padding="10,6"
                    IsVisible="{Binding IsRescanning}">
                <TextBlock Text="{Binding RescanStatusText}" Foreground="#A6E3A1" FontSize="13"/>
            </Border>
            <ProgressBar Minimum="0" Maximum="100" Value="{Binding ProgressPercent}"
                         Height="4" Foreground="#A6E3A1" Background="#1E1E2E"/>
        </StackPanel>

        <!-- Spectrum List -->
        <ScrollViewer Grid.Row="2" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Channels}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical" Spacing="8" Margin="0,0,16,0"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#181825" CornerRadius="8" Padding="16" BorderThickness="1">
                            <Border.BorderBrush>
                                <SolidColorBrush Color="{Binding HasLock, Converter={x:Static local:Converters.LockToColor}}"/>
                            </Border.BorderBrush>
                            
                            <Grid ColumnDefinitions="100,*,300" RowDefinitions="Auto">
                                <!-- Col 0: Physical RF Channel -->
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Text="RF CHANNEL" FontSize="11" Foreground="#A6ADC8" LetterSpacing="1" />
                                    <TextBlock Text="{Binding PhysicalChannel}" FontSize="28" FontWeight="Bold" Foreground="White" />
                                </StackPanel>

                                <!-- Col 1: Virtual Channels, Networks & Location -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="4" Margin="16,0">
                                    <Grid ColumnDefinitions="Auto, *">
                                        <TextBlock Grid.Column="0" Text="Virtual:" FontSize="13" Foreground="#A6ADC8" Width="60"/>
                                        <TextBlock Grid.Column="1" Text="{Binding VirtualChannels}" FontSize="13" Foreground="White" TextWrapping="Wrap" />
                                    </Grid>
                                    <Grid ColumnDefinitions="Auto, *">
                                        <TextBlock Grid.Column="0" Text="Nets:" FontSize="13" Foreground="#A6ADC8" Width="60"/>
                                        <TextBlock Grid.Column="1" Text="{Binding Networks}" FontSize="13" Foreground="White" TextWrapping="Wrap" />
                                    </Grid>
                                    <Grid ColumnDefinitions="Auto, *">
                                        <TextBlock Grid.Column="0" Text="Tower:" FontSize="13" Foreground="#A6ADC8" Width="60"/>
                                        <TextBlock Grid.Column="1" Text="{Binding LocationInfo}" FontSize="13" Foreground="#89B4FA" FontWeight="SemiBold" TextWrapping="Wrap" />
                                    </Grid>
                                </StackPanel>

                                <!-- Col 2: Signal Metrics -->
                                <Grid Grid.Column="2" ColumnDefinitions="100,*,40" RowDefinitions="Auto,Auto" VerticalAlignment="Center" Margin="16,0,0,0">
                                    <!-- Signal Strength -->
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Signal Strength" FontSize="12" Foreground="#A6ADC8" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <ProgressBar Grid.Row="0" Grid.Column="1" Value="{Binding SignalStrength}" Maximum="100" Height="8" CornerRadius="4" Foreground="#A6E3A1" Background="#313244" Margin="0,0,8,8"/>
                                    <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding SignalStrength, StringFormat='{}{0}%'}" FontSize="12" FontWeight="Bold" Foreground="#A6E3A1" VerticalAlignment="Center" Margin="0,0,0,8" TextAlignment="Right"/>
                                    
                                    <!-- Signal Quality -->
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Signal Quality" FontSize="12" Foreground="#A6ADC8" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <ProgressBar Grid.Row="1" Grid.Column="1" Value="{Binding SymbolQuality}" Maximum="100" Height="8" CornerRadius="4" Foreground="#89B4FA" Background="#313244"/>
                                    <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding SymbolQuality, StringFormat='{}{0}%'}" FontSize="12" FontWeight="Bold" Foreground="#89B4FA" VerticalAlignment="Center" TextAlignment="Right"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
