<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:NetAntenna.Desktop.ViewModels"
             xmlns:sp="clr-namespace:ScottPlot.Avalonia;assembly=ScottPlot.Avalonia"
             x:Class="NetAntenna.Desktop.Views.SweeperView"
             x:DataType="vm:SweeperViewModel">

    <Panel>
        <Grid RowDefinitions="Auto,*,Auto">

        <!-- ================================================================
             HEADER â€” Compressed Toolbar & Warnings
             ================================================================ -->
        <StackPanel Grid.Row="0" Spacing="6" Margin="0,0,0,6">
            
            <Border Background="#1E1E2E" CornerRadius="8" Padding="12,8">
                <Grid ColumnDefinitions="Auto,*,Auto">
                    
                    <!-- Left: Tuners -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                        <TextBlock Text="Tuners:" Foreground="#888" FontSize="12" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <ItemsControl ItemsSource="{Binding AvailableTuners}" VerticalAlignment="Center">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate><StackPanel Orientation="Horizontal" Spacing="8"/></ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="vm:SelectableTuner">
                                    <CheckBox Content="{Binding Index}" IsChecked="{Binding IsSelected}" FontSize="12" Margin="0" MinHeight="0" Padding="6,0,0,0"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Border Background="#4D3300" BorderBrush="#FF9800" BorderThickness="1"
                                CornerRadius="4" Padding="6,2" Margin="10,0,0,0"
                                IsVisible="{Binding IsSweeping}" VerticalAlignment="Center">
                            <TextBlock Text="âš  Locked" Foreground="#FFE0B2" FontSize="11" FontWeight="Bold"/>
                        </Border>
                    </StackPanel>

                    <!-- Right: Profile & Buttons -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                        
                        <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                            <TextBlock Text="Mode:" Foreground="#888" FontSize="12" VerticalAlignment="Center"/>
                            <ComboBox SelectedIndex="{Binding SelectedModeIndex}" FontSize="12" Width="130" Padding="8,4" MinHeight="0" IsEnabled="{Binding !IsSweeping}"
                                      ToolTip.Tip="Fixed Count: Runs a set number of times. Time Limited: Runs until the duration is reached. Indefinite: Runs until stopped manually.">
                                <ComboBoxItem Content="Fixed Count"/>
                                <ComboBoxItem Content="Time Limited"/>
                                <ComboBoxItem Content="Indefinite"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center" IsVisible="{Binding ModeFixedCount}">
                            <TextBlock Text="Runs:" Foreground="#888" FontSize="12" VerticalAlignment="Center"/>
                            <NumericUpDown Value="{Binding RunCount}" Minimum="1" Maximum="999" Increment="1" Width="100" FontSize="12" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" IsEnabled="{Binding !IsSweeping}"
                                           ToolTip.Tip="Number of times to scan through the entire channel lineup."/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center" IsVisible="{Binding ModeTimeLimited}">
                            <TextBlock Text="Mins:" Foreground="#888" FontSize="12" VerticalAlignment="Center"/>
                            <NumericUpDown Value="{Binding TimeLimitMinutes}" Minimum="1" Maximum="480" Increment="5" Width="100" FontSize="12" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" IsEnabled="{Binding !IsSweeping}"
                                           ToolTip.Tip="Stop the scan once this total duration has elapsed."/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                            <TextBlock Text="Dwell (s):" Foreground="#888" FontSize="12" VerticalAlignment="Center"/>
                            <NumericUpDown Value="{Binding DwellTimeSeconds}" Minimum="5" Maximum="300" Increment="5" Width="100" FontSize="12" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" IsEnabled="{Binding !IsSweeping}"
                                           ToolTip.Tip="Seconds to stay tuned to each channel to gather signal samples. Longer times provide more accurate averages."/>
                        </StackPanel>

                        <!-- Divider -->
                        <Border Background="#313244" Width="1" Margin="4,2"/>

                        <Button Content="ðŸš€ Start" Command="{Binding StartSweepCommand}" IsVisible="{Binding !IsSweeping}"
                                Background="#388E3C" Foreground="White" Padding="12,4" CornerRadius="4" FontSize="12" FontWeight="Bold"
                                ToolTip.Tip="Begin the diagnostic sweep with selected tuners."/>
                                
                        <Button Content="â¹ Stop" Command="{Binding StopSweepCommand}" IsVisible="{Binding IsSweeping}"
                                Background="#C62828" Foreground="White" Padding="12,4" CornerRadius="4" FontSize="12" FontWeight="Bold"
                                ToolTip.Tip="Cancel the current sweep immediately."/>

                        <Button Content="ðŸ•’ History" Command="{Binding ToggleHistoryCommand}"
                                Background="#45475A" Foreground="White" Padding="12,4" CornerRadius="4" FontSize="12" FontWeight="Bold"
                                ToolTip.Tip="View records of previous sweep sessions."/>

                    </StackPanel>
                </Grid>
            </Border>

            <!-- Warnings below the toolbar -->
            <Border Background="#4D3300" BorderBrush="#FF9800" BorderThickness="1"
                    CornerRadius="4" Padding="10,6"
                    IsVisible="{Binding ShowAllTunersWarning}">
                <Grid ColumnDefinitions="*,Auto">
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="âš " FontSize="14" Foreground="#FF9800" VerticalAlignment="Center"/>
                        <TextBlock Text="WARNING: All tuners are selected! Live TV and DVR will be completely unavailable during the scan."
                                   Foreground="#FFE0B2" FontSize="12" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    </StackPanel>
                    <Button Grid.Column="1" Content="âœ•"
                            Command="{Binding DismissAllTunersWarningCommand}"
                            Background="Transparent" Foreground="#FFE0B2"
                            Padding="8,2" Margin="0" CornerRadius="4" Cursor="Hand"
                            VerticalAlignment="Center">
                    </Button>
                </Grid>
            </Border>

            <Border Background="#1E1E2E" BorderBrush="#313244" BorderThickness="1"
                    CornerRadius="4" Padding="10,6"
                    IsVisible="{Binding ShowSomeTunersWarning}">
                <Grid ColumnDefinitions="*,Auto">
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="â„¹" FontSize="14" Foreground="#89DCEB" VerticalAlignment="Center"/>
                        <TextBlock Text="Note: Selected tuners will be locked and unavailable for other uses during the scan."
                                   Foreground="#CDD6F4" FontSize="12" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button Grid.Column="1" Content="âœ•"
                            Command="{Binding DismissSomeTunersWarningCommand}"
                            Background="Transparent" Foreground="#CDD6F4"
                            Padding="8,2" Margin="0" CornerRadius="4" Cursor="Hand"
                            VerticalAlignment="Center">
                    </Button>
                </Grid>
            </Border>
            
        </StackPanel>

        <!-- ================================================================
             BODY â€” DataGrid + Chart
             ================================================================ -->
        <Grid Grid.Row="1" RowDefinitions="3*,2*" Margin="0,0,0,6">

            <!-- DataGrid panel -->
            <Border Grid.Row="0" Background="#1E1E2E" CornerRadius="8" Padding="14" Margin="0,0,0,4">
                <Grid RowDefinitions="Auto,*">

                    <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,8">
                        <TextBlock Text="Aggregated Results" FontWeight="SemiBold" FontSize="14"
                                   Foreground="#CDD6F4" VerticalAlignment="Center"
                                   ToolTip.Tip="Statistics are aggregated across all completed sweep passes. Min/Max/Avg values improve in accuracy with each additional run."/>
                        <Border Grid.Column="1" Background="#313244" CornerRadius="10" Padding="10,3"
                                IsVisible="{Binding IsSweeping}"
                                ToolTip.Tip="Current pass number out of the target number of passes.">
                            <TextBlock Text="{Binding RunProgressText}" Foreground="#89DCEB"
                                       FontSize="12" FontWeight="SemiBold"/>
                        </Border>
                    </Grid>

                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding LiveResults}"
                              SelectedItem="{Binding SelectedChannel}"
                              IsReadOnly="True"
                              CanUserResizeColumns="True"
                              GridLinesVisibility="Horizontal"
                              RowBackground="Transparent"
                              ToolTip.Tip="Click a row to plot that channel's signal trend over time in the chart below.">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Channel"  Binding="{Binding Channel}"  Width="Auto"/>
                            <DataGridTextColumn Header="Samples"  Binding="{Binding SampleCount}" Width="Auto" ToolTip.Tip="Number of signal samples collected for this channel."/>
                            <DataGridTextColumn Header="Avg SEQ"  Binding="{Binding AvgSeq, StringFormat='{}{0:F1}%'}" Width="Auto" ToolTip.Tip="Symbol Error Quality average. High values are better."/>
                            <DataGridTextColumn Header="Min SEQ"  Binding="{Binding MinSeq, StringFormat='{}{0:F1}%'}" Width="Auto"/>
                            <DataGridTextColumn Header="Max SEQ"  Binding="{Binding MaxSeq, StringFormat='{}{0:F1}%'}" Width="Auto"/>
                            <DataGridTextColumn Header="Avg SS"   Binding="{Binding AvgSs,  StringFormat='{}{0:F1}%'}" Width="Auto" ToolTip.Tip="Signal Strength average. Higher is stronger."/>
                            <DataGridTextColumn Header="Min SS"   Binding="{Binding MinSs,  StringFormat='{}{0:F1}%'}" Width="Auto"/>
                            <DataGridTextColumn Header="Max SS"   Binding="{Binding MaxSs,  StringFormat='{}{0:F1}%'}" Width="Auto"/>
                            <DataGridTextColumn Header="Avg SNQ"  Binding="{Binding AvgSnq, StringFormat='{}{0:F1}%'}" Width="Auto" ToolTip.Tip="Signal-to-Noise Quality average. Higher is cleaner."/>
                            <DataGridTextColumn Header="Min SNQ"  Binding="{Binding MinSnq, StringFormat='{}{0:F1}%'}" Width="Auto"/>
                            <DataGridTextColumn Header="Max SNQ"  Binding="{Binding MaxSnq, StringFormat='{}{0:F1}%'}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Chart panel -->
            <Border Grid.Row="1" Background="#1E1E2E" CornerRadius="8" Padding="14"
                    ToolTip.Tip="Shows how SS (Signal Strength), SNQ (Signal-to-Noise Quality), and SEQ (Symbol Error Quality) change across successive sweep runs for the selected channel. Flat lines indicate a stable signal; dips reveal intermittent reception issues.">
                <Grid RowDefinitions="Auto,*">
                    <TextBlock Grid.Row="0"
                               Text="Signal Trend Over Sweeps â€” click a channel row to plot"
                               Foreground="#6C7086" FontSize="11" Margin="0,0,0,6"/>
                    <sp:AvaPlot x:Name="TrendChart" Grid.Row="1"/>
                </Grid>
            </Border>
        </Grid>

        <!-- ================================================================
             FOOTER â€” Progress bar
             ================================================================ -->
        <Border Grid.Row="2" Background="#181825" CornerRadius="6" Padding="12,8"
                ToolTip.Tip="Progress through the current sweep pass. Resets to 0% at the start of each new pass.">
            <Grid ColumnDefinitions="*,Auto">
                <ProgressBar Grid.Column="0" Value="{Binding ProgressPercent}" Height="8"
                             Foreground="#89DCEB" Background="#313244" CornerRadius="4"
                             Margin="0,0,14,0"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="3">
                    <TextBlock Text="{Binding ChannelsScanned}" FontWeight="Bold" Foreground="#89DCEB" FontSize="12"/>
                    <TextBlock Text="/" Foreground="#6C7086" FontSize="12"/>
                    <TextBlock Text="{Binding TotalChannels}" Foreground="#6C7086" FontSize="12"/>
                    <TextBlock Text="channels" Foreground="#6C7086" FontSize="12" Margin="3,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>

    <!-- ================================================================
         HISTORY OVERLAY
         ================================================================ -->
    <Grid Background="#AA000000" IsVisible="{Binding IsHistoryOpen}" ZIndex="100">
        <Border Background="#1E1E2E" CornerRadius="8" BorderBrush="#45475A" BorderThickness="1"
                Width="500" Margin="40" Padding="20" HorizontalAlignment="Right">
            <Grid RowDefinitions="Auto,*,Auto">
                
                <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,16">
                    <TextBlock Text="Scan History" FontSize="18" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                    <Button Grid.Column="1" Content="âœ•" Command="{Binding ToggleHistoryCommand}" Background="Transparent" Foreground="#A6ADC8" Padding="6"/>
                </Grid>

                <ListBox Grid.Row="1" ItemsSource="{Binding HistorySessions}" SelectedItem="{Binding SelectedHistorySession}"
                         Background="Transparent" BorderThickness="0" Margin="0,0,0,16">
                    <ListBox.ItemTemplate>
                        <DataTemplate x:DataType="vm:SweepSessionViewModel">
                            <Border Background="#313244" CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                <Grid RowDefinitions="Auto,Auto">
                                    <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
                                        <TextBlock Text="{Binding StartTimeFormatted}" 
                                                   FontWeight="Bold" Foreground="#CDD6F4"/>
                                        <TextBlock Grid.Column="1" Text="{Binding Mode}" Foreground="#A6ADC8" FontSize="12"/>
                                    </Grid>
                                    <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="16" Margin="0,6,0,0">
                                        <TextBlock Text="{Binding CompletedRuns, StringFormat='{}Runs: {0}'}" Foreground="#89DCEB" FontSize="12"/>
                                        <TextBlock Text="{Binding DurationFormatted, StringFormat='{}Elapsed: {0}'}" Foreground="#A6ADC8" FontSize="12"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <Button Grid.Row="2" Content="Load Selected Session" Command="{Binding LoadSelectedSessionCommand}"
                        Background="#89B4FA" Foreground="#11111B" FontWeight="Bold" CornerRadius="6" Padding="0,10"
                        HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>

    </Panel>
</UserControl>
